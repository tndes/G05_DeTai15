@model IEnumerable<CNPM.Models.PhieuXuatKho>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<link href="~/Content/bang.css" rel="stylesheet" />

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div style="text-align:center">
    @using (Html.BeginForm("index", "PhieuXuatKho"))
    {
        <b>Search by: </b>@Html.RadioButton("searchBy", "HoTenNguoiXuat", true)<text>Tên Người Xuất</text>


        @Html.TextBox("Search")<input type="submit" value="Search" style="width: auto;
  margin: 5px 0 22px 0;
  display: inline-block;
  border: none;
  background: #f1f1f1;" />
    }
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdPhieuXK)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgayXuatKho)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HoTenNguoiXuat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TongSoTien)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoChungTuGocKem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdDDHKH)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdPhieuXK)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayXuatKho)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoTenNguoiXuat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TongSoTien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoChungTuGocKem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdDDHKH)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IdPhieuXK }) |
                @Html.ActionLink("Details", "Details", new { id = item.IdPhieuXK }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IdPhieuXK })
            </td>
        </tr>
    }

</table>
