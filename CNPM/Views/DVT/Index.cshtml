@model IEnumerable<CNPM.Models.DonViTinh>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<link href="~/Content/bang.css" rel="stylesheet" />

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div style="text-align:center">
    @using (Html.BeginForm("index", "DVT"))
    {
        <b>Search by: </b>@Html.RadioButton("searchBy", "DonVi", true)<text>Đơn Vị Tính</text>
        @Html.TextBox("search")<input type="submit" value="Search" style="width: auto;
  margin: 5px 0 22px 0;
  display: inline-block;
  border: none;
  background: #f1f1f1;" />
    }
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdDVT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DonVi)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdDVT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonVi)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IdDVT }) |
                @Html.ActionLink("Details", "Details", new { id = item.IdDVT }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IdDVT })
            </td>
        </tr>
    }

</table>
